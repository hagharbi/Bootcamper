<style type="text/css">
    h3 {
        color: black;
        text-decoration: bold;
    }

    label {
        color: gray;
    }
</style>
<div id="logIn">
    <h3>Log In</h3>
    <div class="row">
        <div class="col-lg-4">
            <form id="signin" name="signin" method="post" action="signin">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" id="userName" placeholder="Email/Username">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="userPassword" placeholder="Password">
                    <span>
                        <small id="gradHelp" class="form-text text-muted">
                            <a href="#">Forgot Password?</a>
                        </small>
                    </span>
                </div>
                <button type="submit" class="btn btn-primary" id="logSubmit">Submit</button>
            </form>
        </div>
    </div>
</div>


