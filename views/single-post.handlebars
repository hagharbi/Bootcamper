<style>
    * {
        font-family: 'Nunito', sans-serif;
        color: #333 !important;
        box-sizing: border-box;
        line-height: 1.2;
    }

    body {
        margin: 0;
        padding: 0;
        /* background: linear-gradient(to bottom, rgb(220, 220, 220),  rgb(220, 220, 220), rgb(112, 103, 182, 1)); */
    }

    .navbar {
        /* position: fixed;
    top: 0; */
        background: linear-gradient(to right, rgb(0, 40, 162), rgb(155, 64, 224)) !important;
        padding: 0;
        width: 100%;
        opacity: .7;
    }

    #navLogo {
        margin: 2rem auto 0 6rem;
        color: white;
    }

    .navbar-nav {
        margin: 2rem 5rem 0 auto;
    }

    .nav-item {
        margin-right: 1rem;
    }

    .img-responsive {
        background-image: url("../images/portal-bg-01.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
    }

    h1 {
        color: white;
        font-size: 3rem;
        font-weight: 700;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
    }

    h3 {
        color: #333;
        font-weight: 700;
        margin: 1rem auto 0 2rem;
    }

    h4 {
        color: white;
    }

    p,
    em,
    h5,
    h6 {
        color: #333;
    }

    h4:hover {
        color: #E2B3FA !important;
    }

    /* CONTENT */
    #post,
    #singlePost {
        margin: 6rem auto 0;
    }

    .dash-tab {
        margin: 0 0 .5rem 1rem;
    }

    #submitComment {
        border-radius: 35px;
        margin: 0 auto 0 auto;
        border: none;
        color: white;
        text-align: center;
    }

    #user-icon {
        text-align: center;
    }

    .card {
        /* opacity: 0.7; */
        box-shadow: 0px 1px 30px #999;
    }

    .card-body {
        padding: .375rem;
        margin: 0 3rem;
    }

    hr {
        margin: 0 auto;
    }

    .separator-lg {
        border: 1px solid #555;
        color: black;
        margin-bottom: 1rem;

    }

    #post_Body {
        margin: 2rem 0 2rem 2rem;
    }

    #post_Author, #post_UpdatedAt {
        font-size: .85rem;
        text-align: right;
        margin-right: 1rem;
    }

    #post_Category {
        border-radius: 25px;
        margin-left: 1rem;
    }

    .comment {
        margin: 1rem;
    }
</style>

<body class="img-responsive">
    <!-- Navbar -->
    <!-- Fixed navbar -->
    <div id="full-bar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <span class="navbar-brand">
                <div class="navbar-brand" id="navLogo">
                    <h1>Bootcamper</h1>
                </div>
            </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#logout"
                aria-controls="logout" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="logout">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/myaccount">
                            <h4>My Account</h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/posts">
                            <h4>Posts</h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/network">
                            <h4>Network</h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <h4>Logout</h4>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <!-- SINGLE POST -->
    <div class="container">
        <div class="row" id="singlePost">
            <div class="col-lg-10">
                <h2 id="post_Title"></h2>
            </div>
            <div class="col-lg-2">
                <!-- <canvas id="user-icon" width="1rem" height="1rem" style="background: black"> -->
                <h3>Avatar</h3>
                <!-- </canvas> -->
            </div>
        </div>
        <hr class="separator-lg">
        <div class="row">
            <div class="col-lg-6">
                <h4><span class="badge badge-secondary" id="post_Category"></span></h4>
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-3">
                <p id="post_Author"></p>
                <p id = "post_UpdatedAt"></p>
            </div>
        </div>

        <div class="row">
                        <div class="col-lg-12">
                        <h5 id="post_Body"></h5>
                        </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 id="post_Body"></h5>
                    </div>
                        <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <form class="clearfix mt-4 mb-4" id="commentForm" action="/api/comments" method="POST">
                                <div class="form-group comment">
                                    <label for="comment-body" id="black"></label>
                                    <textarea class="form-control" name="comment-body" id="comment-body"
                                        aria-describedby="post-body"
                                        placeholder="Write your comment here"></textarea>
                                </div>
                                <button id="submitComment" class="btn btn-info">Submit</button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12 mt-2">
                                <div id="commentContainer"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Script -->
    <script src="js/postandcomments.js" type="text/javascript"></script>
</body>