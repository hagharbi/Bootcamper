<div id="createAccount">
  <form action="">
    <h3>Create Account</h3>
    <div class="row">
      <div class="col-lg-2">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="password" class="form-control" id="name" placeholder="Password">
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="password" class="form-control" id="lastName" placeholder="Password">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <form>
          <div class="form-group">
            <label for="userEmail">Email</label>
            <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Email">
            <small id="emailHelp" class="form-text text-muted">Your email will be set as
              your username.</small>
          </div>
          <div class="form-group">
            <label for="userSchool">School/Bootcamp</label>
            <input type="password" class="form-control" id="userSchool" placeholder="School/Bootcamp">
            <span>
              <small id="gradHelp" class="form-text text-muted">
                If still attending, do not check the box.
              </small>
            </span>
            <div class="form-group form-check" id="checkBox">
              <input type="checkbox" class="form-check-input" id="gradCheck">
              <label class="form-check-label" for="gradCheck">Graduated</label>
            </div>
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" class="form-control" id="userPassword" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-outline-light" id="newAcctSubmit">Submit</button>
        </form>
      </div>
    </div>
  </form>
</div>